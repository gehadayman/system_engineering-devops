#!/bin/bash
# Script to list all running processes with full details and hierarchy
# Display header
echo "USER       PID %CPU %MEM    VSZ   RSS TTY      STAT START   TIME COMMAND"
# Use ps and pstree for process hierarchy and full listing
ps -eo user,pid,pcpu,pmem,vsz,rss,tty,stat,start,time,cmd --sort=pid --forest
